@model LMS2.Models.Borrowing

@{
	ViewData["Title"] = "Update Borrowing";
}

<div class="container">
	<h1>@ViewData["Title"]</h1>

	<form method="post" action="/Borrowing/Update/@Model.Id">
		<div class="form-group>
			<label for="reader">Reader:</label>
			<input type="text" id="reader" name="reader" value="@Model.Reader.Name" required class="form-control" readonly />
		</div>
		<div class="form-group>
			<label for="book">Book:</label>
			<input type="text" id="book" name="book" value="@Model.Book.Title" required class="form-control" readonly />
		</div>
		<div class="form-group>
			<label for="borrowDate">Borrow Date:</label>
			<input type="date" id="borrowDate" name="borrowDate" value="@Model.BorrowDate.ToString("yyyy-MM-dd")" required class="form-control" />
		</div>
		<div class="form-group>
			<label for="returnDate">Return Date:</label>
			<input type="date" id="returnDate" name="returnDate" value="@Model.ReturnDate.ToString("yyyy-MM-dd")" required class="form-control" />
		</div>
		<br />
		<button type="submit" class="btn btn-primary">Update Borrowing</button>
	</form>
</div>



