@model LMS2.Models.Reader

@{
	ViewData["Title"] = "Update Reader";
}

<div class="container">
	<h1>@ViewData["Title"]</h1>

	<form method="post" action="/Reader/Update/@Model.ReaderId">
		<div class="form-group">
			<label for="name">Name:</label>
			<input type="text" id="name" name="name" value="@Model.Name" required class="form-control" />
		</div>
		
		<br />
		<button type="submit" class="btn btn-primary">Update Reader</button>
	</form>
</div>
