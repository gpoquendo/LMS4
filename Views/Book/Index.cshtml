@model List<LMS3.Models.Book>
<style>
    .button-group {
        display: flex;
        gap: 10px;
    }
</style>

<h2>Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.IsAvailable</td>
                <td>
                    <div class="button-group">
                        <a asp-action="GetBook" asp-route-id="@book.Id" class="btn btn-primary">View</a>
                        <form asp-action="DeleteBook" asp-route-id="@book.Id" method="post">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Book" asp-action="AddBook" class="btn btn-success">Add New Book</a>